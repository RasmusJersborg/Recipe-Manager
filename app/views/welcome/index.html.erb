<p id="notice"><%= notice %></p>
<div id="recipes">
<h3>Welcome to Recipe Box</h3>
<img id="spaghetti" src="http://www.allthingsclipart.com/07/spaghetti.10.jpg" alt="Spaghetti"/>

<div class="container">
  <div class="row">
    <div class="col-sm-6" align="center">
      <div class="card">
        <div class="card-body">
          <a href="/recipes" class="btn btn-primary">Browse All Recipes</a>
        </div>
      </div>
    </div>
    <% if current_user %>
    <div class="col-sm-6" align="center">
      <div class="card">
        <div class="card-body">
          <a href="/users/<%=current_user.id%>" class="btn btn-primary">Your Saved Recipes</a>
        </div>
      </div>
    </div>
    <%end%>
    <div class="col-sm-6" align="center">
      <div class="card">
        <div class="card-body">
          <a href="/recipes/new" class="btn btn-primary">New Recipe</a>
        </div>
      </div>
    </div>
</div>
</div>
</div>
